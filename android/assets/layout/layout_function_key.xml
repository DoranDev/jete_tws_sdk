<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/rounder_function_view_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <TextView
        style="@style/DeviceFunctionTextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/function_navigation_margin"
        android:layout_marginEnd="@dimen/function_navigation_margin"
        android:layout_marginTop="@dimen/function_title_top_margin"
        android:layout_marginBottom="@dimen/function_title_bottom_margin"
        android:text="@string/function_class_key_functions"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--第一行-->
        <TableRow
            android:layout_marginTop="@dimen/function_key_table_row_margin_top"
            android:layout_marginBottom="@dimen/function_key_table_row_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:textStyle="bold"
                android:text="@string/function_key_audio_mode"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:text="@string/function_key_left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="3"
                android:text="@string/function_key_right"/>
        </TableRow>

        <!--第二行 单击-->
        <TableRow
            android:layout_marginTop="@dimen/function_key_table_row_margin_top"
            android:layout_marginBottom="@dimen/function_key_table_row_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:text="@string/function_key_single_tap"/>

            <!--单击 左-->
            <LinearLayout
                android:id="@+id/left_single_tap_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/left_single_tap_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>

            <!--单击 右-->
            <LinearLayout
                android:id="@+id/right_single_tap_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/right_single_tap_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>
        </TableRow>

        <!--第三行 双击-->
        <TableRow
            android:layout_marginTop="@dimen/function_key_table_row_margin_top"
            android:layout_marginBottom="@dimen/function_key_table_row_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:text="@string/function_key_double_tap"/>

            <!--双击 左-->
            <LinearLayout
                android:id="@+id/left_double_tap_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/left_double_tap_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>

            <!--双击 右-->
            <LinearLayout
                android:id="@+id/right_double_tap_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/right_double_tap_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>
        </TableRow>

        <!--第四行 三击-->
        <TableRow
            android:layout_marginTop="@dimen/function_key_table_row_margin_top"
            android:layout_marginBottom="@dimen/function_key_table_row_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:text="@string/function_key_triple_tap"/>

            <!--三击 左-->
            <LinearLayout
                android:id="@+id/left_triple_tap_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/left_triple_tap_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>

            <!--三击 右-->
            <LinearLayout
                android:id="@+id/right_triple_tap_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/right_triple_tap_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>
        </TableRow>

        <!--第五行 长按-->
        <TableRow
            android:layout_marginTop="@dimen/function_key_table_row_margin_top"
            android:layout_marginBottom="@dimen/function_key_table_row_margin_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:text="@string/function_key_long_press"/>

            <!--三击 左-->
            <LinearLayout
                android:id="@+id/left_long_press_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/left_long_press_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>

            <!--三击 右-->
            <LinearLayout
                android:id="@+id/right_long_press_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true">

                <TextView
                    android:id="@+id/right_long_press_function"
                    style="@style/DeviceFunctionKeyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:clickable="false"
                    android:src="@drawable/ic_arrow_right_24dp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>
</LinearLayout>